{% extends 'pages/index.twig' %}

{% block head_script %}
  {{ parent() }}

  <script src="//cdn.rawgit.com/drupal/drupal/7.x/misc/jquery.once.js"></script>
  <script src="//cdn.rawgit.com/drupal/drupal/7.x/misc/drupal.js"></script>
  <script src="//cdn.rawgit.com/drupal/drupal/7.x/misc/form.js"></script>
  <script src="//cdn.rawgit.com/drupal/drupal/7.x/misc/vertical-tabs.js"></script>
  <script src="//cdn.rawgit.com/drupal/drupal/7.x/modules/system/system.base.css"></script>
  <script src="//cdn.rawgit.com/drupal/drupal/7.x/modules/system/system.theme.css"></script>

  <link rel="stylesheet" href="//cdn.rawgit.com/drupal/drupal/7.x/misc/print.css"/>
  <link rel="stylesheet" href="//cdn.rawgit.com/drupal/drupal/7.x/misc/vertical-tabs.css"/>
  <link rel="stylesheet" href="//cdn.rawgit.com/drupal/drupal/7.x/modules/system/system.base.css"/>
  <link rel="stylesheet" href="//cdn.rawgit.com/drupal/drupal/7.x/modules/system/system.menus.css"/>
  <link rel="stylesheet" href="//cdn.rawgit.com/drupal/drupal/7.x/modules/system/system.messages.css"/>
  <link rel="stylesheet" href="//cdn.rawgit.com/drupal/drupal/7.x/modules/system/system.theme.css"/>
  <link rel="stylesheet" href="//cdn.rawgit.com/drupal/drupal/7.x/modules/field/theme/field.css"/>
  <link rel="stylesheet" href="//cdn.rawgit.com/drupal/drupal/7.x/modules/node/node.css"/>
  <link rel="stylesheet" href="//cdn.rawgit.com/drupal/drupal/7.x/modules/user/user.css"/>
{% endblock %}

{% block contentPrefix %}
  {% if messages is defined %}
    {% for type, items in messages %}
      <div class="messages {{ type }}">
        <ul>
          {% for item in items %}
            <li>{{ item|raw }}</li>
          {% endfor %}
        </ul>
      </div>
    {% endfor %}
  {% endif %}

  {{ parent() }}
{% endblock %}
